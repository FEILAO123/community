<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hhj.dao.UserMapper">
    <sql id="userFields">
        id,username,salt,email,type,status,header_url,create_time
    </sql>


    <select id="selectUserById" resultType="User">
        select *
        from user
        <if test="userId != null">
            where id = #{userId}
        </if>
    </select>
    <select id="selectByName" resultType="int">
        select count(username)
        from user
        <if test="name != null">
            where username = #{name}
        </if>
    </select>
    <select id="selectByEmail" resultType="int">
        select count(email)
        from user
        <if test="email != null">
            where email= #{email}
        </if>
    </select>
    <insert id="insertUser" parameterType="user">
        insert into user(id,username,password,salt,email,type,status,activation_code,header_url,create_time)
        values (null,
        <if test="user.username!=null">
            #{user.username},
        </if>
        <if test="user.password!=null">
            #{user.password},
        </if>
        <if test="user.salt!=null">
            #{user.salt},
        </if>
        <if test="user.email !=null">
            #{user.email},
        </if>
        <if test="user.type !=null">
            #{user.type},
        </if>
        <if test="user.status !=null">
            #{user.status},
        </if>
        <if test="user.activationCode !=null">
            #{user.activationCode},
        </if>
        <if test="user.headerUrl !=null">
            #{user.headerUrl},
        </if>
        now())
    </insert>
    <update id="updateStatus" parameterType="int">
        update user
        set
        <if test="status!=null">
            status = #{status}
        </if>
        <if test="userId !=null">
            where id = #{userId}
        </if>
    </update>
    <select id="getUserId" resultType="int">
        select id
        from user
        <if test="username !=null">
            where username = #{username}
        </if>
    </select>
</mapper>